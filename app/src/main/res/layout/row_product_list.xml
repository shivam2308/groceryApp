<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_productlist_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/row_product_card_bg"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_140sdp"
            android:layout_margin="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/row_productlist_ivProImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/p_tomato" />


                <ImageView
                    android:id="@+id/row_productlist_ivLikeUnLike"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_fav_select" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.amazaar.CustomeComponent.CustomTextView
                android:id="@+id/row_productlist_tvName"
                style="@style/ganaral_greystyle"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16sdp"
                app:font_name="NunitoBold.ttf" />


            <com.amazaar.CustomeComponent.CustomTextView
                android:id="@+id/row_productlist_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/login_signup_edithint_color"
                android:textSize="@dimen/_15sdp"
                app:font_name="NunitoLight.ttf" />


        </RelativeLayout>


        <com.amazaar.CustomeComponent.CustomTextView
            android:id="@+id/row_produclist_tvAddtoCart"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/addcart_drawable"
            android:gravity="center"
            android:text="@string/add_to_cart"
            android:textAllCaps="true"
            android:textColor="@color/row_product_add_color"
            android:textSize="@dimen/_13sdp"
            android:visibility="visible"
            app:font_name="NunitoExtraBold.ttf" />


        <RelativeLayout
            android:id="@+id/row_produclist_rlTotalCart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/row_productlist_ivMins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_mins_y" />


            <com.amazaar.CustomeComponent.CustomTextView
                android:id="@+id/row_productlist_tvTotalKg"
                style="@style/order_lable_style"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                app:font_name="NunitoBold.ttf" />


            <ImageView
                android:id="@+id/row_productlist_ivPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_plus_y" />


        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>