<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_cancel_order_cvMain"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_115sdp"
    android:clickable="true"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/order_pendig_bgcolro"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp"
    android:layout_margin="@dimen/_7sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/row_cancel_order_ivStatus"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_6sdp"
            android:src="@drawable/ic_order_pending" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <com.amazaar.CustomeComponent.CustomTextView
                        style="@style/order_lable_style"
                        android:layout_centerVertical="true"
                        android:text="@string/order_date"
                        android:textSize="@dimen/_14sdp"
                        app:font_name="NunitoBold.ttf" />


                    <com.amazaar.CustomeComponent.CustomTextView
                        android:id="@+id/row_cancel_order_tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/row_addresslistnew_tvColor"
                        android:textSize="@dimen/_15sdp"
                        app:font_name="NunitoLight.ttf" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <com.amazaar.CustomeComponent.CustomTextView
                        style="@style/order_lable_style"
                        android:layout_centerVertical="true"
                        android:text="@string/order_id"
                        android:textSize="@dimen/_14sdp"
                        app:font_name="NunitoBold.ttf" />


                    <com.amazaar.CustomeComponent.CustomTextView
                        android:id="@+id/row_cancel_order_tvOrderID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/row_addresslistnew_tvColor"
                        android:textSize="@dimen/_15sdp"
                        app:font_name="NunitoLight.ttf" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">

                    <com.amazaar.CustomeComponent.CustomTextView
                        android:id="@+id/row_cancel_order_tvDeliveryLable"
                        style="@style/order_lable_style"
                        android:layout_centerVertical="true"
                        android:text="@string/to_deliver_on"
                        android:textSize="@dimen/_14sdp"
                        app:font_name="NunitoBold.ttf" />


                    <com.amazaar.CustomeComponent.CustomTextView
                        android:id="@+id/row_cancel_order_tvDeliveryDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/row_addresslistnew_tvColor"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="gone"
                        app:font_name="NunitoLight.ttf" />


                    <com.amazaar.CustomeComponent.CustomTextView
                        android:id="@+id/row_cancel_order_tvCancelLable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cancelled"
                        android:textColor="@color/logout_text_color"
                        android:textSize="@dimen/_15sdp"
                        app:font_name="NunitoSemiBold.ttf" />


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/row_cancel_order_rlCancelOrder"
                    android:layout_width="@dimen/_115sdp"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/calcelorder_drawable"
                    android:gravity="end"
                    android:padding="@dimen/_5sdp"
                    android:visibility="visible">


                    <com.amazaar.CustomeComponent.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="@string/cancel_order"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        app:font_name="NunitoExtraBold.ttf" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/row_cancel_order_rlReportOrder"
                    android:layout_width="@dimen/_115sdp"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/drawable_white"
                    android:gravity="end"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone">


                    <com.amazaar.CustomeComponent.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="@string/view_receipt"
                        android:textColor="@color/forgor_submit_color"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        app:font_name="NunitoExtraBold.ttf" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>