<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_cartlist_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_7sdp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_above="@+id/add"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_3sdp"
            android:layout_toStartOf="@+id/row_cartlist_tvPrice"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/row_product_cart_color"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_3sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:focusable="true"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/row_cartlist_ivProImg"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:src="@drawable/apple" />

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <com.amazaar.CustomeComponent.CustomTextView
                        android:id="@+id/row_cartlist_tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_5sdp"
                        android:textColor="@color/menu_text_color"
                        android:textSize="@dimen/_16sdp"
                        app:font_name="NunitoBold.ttf" />

                    <com.amazaar.CustomeComponent.CustomTextView
                        android:id="@+id/row_cartlist_tvKg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:textColor="@color/login_signup_edithint_color"
                        android:textSize="@dimen/_13sdp"
                        app:font_name="NunitoLight.ttf" />


                    <RelativeLayout
                        android:id="@+id/row_cartlist_rlTotalCart"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/row_cartlist_ivMins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_mins_y" />


                        <com.amazaar.CustomeComponent.CustomTextView
                            android:id="@+id/row_cartlist_tvTotalKg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12sdp"
                            app:font_name="NunitoBold.ttf" />


                        <ImageView
                            android:id="@+id/row_cartlist_ivPlus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_plus_y" />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/row_cartlist_ivDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_dustbin"
                android:visibility="gone" />


        </androidx.cardview.widget.CardView>


        <com.amazaar.CustomeComponent.CustomTextView
            android:id="@+id/row_cartlist_tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/menu_text_color"
            android:textSize="@dimen/_16sdp"
            app:font_name="NunitoRegular.ttf" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/_22sdp"
        android:src="@drawable/ic_add" />


</RelativeLayout>



