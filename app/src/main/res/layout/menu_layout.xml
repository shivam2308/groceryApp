                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/logindrawable"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/log_in"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                app:font_name="NunitoExtraBold.ttf" />


            <com.amazaar.CustomeComponent.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:text="@string/or"
                android:textColor="@color/login_signup_edithint_color"
                android:textSize="@dimen/_13sdp"
                app:font_name="NunitoLight.ttf" />


            <com.amazaar.CustomeComponent.CustomTextView
                android:id="@+id/fragment_menu_tvSignup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_weight="1"
                android:background="@drawable/signupdrawable"
                android:visibility="gone"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/sign_up"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                app:font_name="NunitoExtraBold.ttf" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
