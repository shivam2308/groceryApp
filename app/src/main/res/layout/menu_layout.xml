                <com.amazaar.CustomeComponent.CustomTextView
                    android:id="@+id/fragment_menu_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kailash patel"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_17sdp"
                    app:font_name="NunitoExtraBold.ttf" />

                <com.amazaar.CustomeComponent.CustomTextView
                    android:id="@+id/fragment_menu_tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Greenland"
                    android:textColor="@color/signup_tab_color"
                    android:textSize="@dimen/_15sdp"
                    app:font_name="NunitoExtraBold.ttf" />


            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_next" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

