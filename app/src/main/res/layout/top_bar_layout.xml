<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/activity_home_rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_home_ivMenu"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp" />

        <com.amazaar.CustomeComponent.CustomTextView
            android:id="@+id/activity_home_tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone"
            android:paddingStart="@dimen/_5sdp"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/activity_home_ivMenu"
            android:layout_toStartOf="@+id/activity_home_ivCart"
            android:textSize="@dimen/_16sdp"
            app:font_name="NunitoExtraBold.ttf" />


        <com.amazaar.CustomeComponent.CustomEdittext
            android:id="@+id/activity_home_etSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:visibility="gone"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:textSize="@dimen/_14sdp"
            android:layout_toEndOf="@+id/activity_home_ivMenu"
            android:layout_toStartOf="@+id/activity_home_ivCart"
            android:background="@drawable/search_box"
            android:drawableEnd="@drawable/ic_search_audio"
            android:gravity="start|center_vertical"
            android:hint="@string/search_groceries_or_product"
            android:textColorHint="@color/search_bg_hint_clor" />


        <ImageView
            android:id="@+id/activity_home_ivCart"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_cart"
            android:contentDescription="TODO" />


    </RelativeLayout>
</LinearLayout>