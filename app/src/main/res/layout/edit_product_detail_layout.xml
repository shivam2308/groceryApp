<?xml version="1.0" encoding="utf-8"?>
<com.amazaar.Comman.SlidingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_login_llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_15sdp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_2sdp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.amazaar.CustomeComponent.CustomTextView
                        style="@style/ganaral_header_style"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/edit"
                        app:font_name="NunitoBold.ttf" />
                    <ImageView
                        android:id="@+id/dailog_send_feedback_ivClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_close" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <com.amazaar.CustomeComponent.CustomTextView
                                style="@style/ganaral_lable_style"
                                android:paddingStart="@dimen/_3sdp"
                                android:text="@string/product_name"
                                app:font_name="NunitoBold.ttf" />
                            <com.amazaar.CustomeComponent.CustomEdittext
                                android:id="@+id/fragment_edit_etProductName"
                                style="@style/ganaral_edittext_style"
                                android:hint="@string/enter_Product_name"
                                android:inputType="text"
                                app:font_name="NunitoLight.ttf" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical">
                        <com.amazaar.CustomeComponent.CustomTextView
                            style="@style/ganaral_lable_style"
                            android:paddingStart="@dimen/_3sdp"
                            android:text="@string/quantity"
                            app:font_name="NunitoBold.ttf" />


                        <com.amazaar.CustomeComponent.CustomEdittext
                            android:id="@+id/fragment_edit_productquantity"
                            style="@style/ganaral_edittext_style"
                            android:hint="@string/enter_your_quantity"
                            android:inputType="number"
                            app:font_name="NunitoLight.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical">
                        <com.amazaar.CustomeComponent.CustomTextView
                            style="@style/ganaral_lable_style"
                            android:paddingStart="@dimen/_3sdp"
                            android:text="@string/price"
                            app:font_name="NunitoBold.ttf" />


                        <com.amazaar.CustomeComponent.CustomEdittext
                            android:id="@+id/fragment_edit_productprice"
                            style="@style/ganaral_edittext_style"
                            android:hint="@string/enter_your_price"
                            app:font_name="NunitoLight.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">
                        <com.amazaar.CustomeComponent.CustomTextView
                            style="@style/ganaral_lable_style"
                            android:paddingStart="@dimen/_3sdp"
                            android:text="@string/availability_status"
                            app:font_name="NunitoBold.ttf" />

                        <Switch
                            android:id="@+id/toggle_av"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical">
                        <com.amazaar.CustomeComponent.CustomTextView
                            style="@style/ganaral_lable_style"
                            android:paddingStart="@dimen/_3sdp"
                            android:text="@string/quantity_type"
                            app:font_name="NunitoBold.ttf" />

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/quantity_type_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">
                        <com.amazaar.CustomeComponent.CustomTextView
                            android:id="@+id/fragment_save_tvEditDataSave"
                            style="@style/ganaral_logintext_btn_style"
                            android:layout_alignParentEnd="true"
                            android:padding="@dimen/_3sdp"
                            android:text="@string/save"
                            app:font_name="NunitoExtraBold.ttf" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>
</com.amazaar.Comman.SlidingLinearLayout>